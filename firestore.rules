rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Função auxiliar para verificar se o usuário está logado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Regras para a coleção de usuários
    match /users/{userId} {
      // Qualquer usuário autenticado pode ler dados de usuários (necessário para listar gerentes)
      allow read: if isAuthenticated();
      // Apenas Desenvolvedores ou o próprio usuário podem escrever
      allow write: if isAuthenticated(); 
    }

    // Regras para cooperados
    match /cooperados/{document=**} {
      allow read, write: if isAuthenticated();
    }

    // Regras para visitas
    match /visits/{visitId} {
      allow read, write: if isAuthenticated();
    }

    // Regras para sugestões de visitas
    match /suggestedVisits/{suggestionId} {
      allow read, write: if isAuthenticated();
    }
  }
}